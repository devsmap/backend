{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "outDir": "./build",
    "rootDir": ".",
    "paths": {
      "~api/*": ["./src/api/*"],
      "~middlewares/*": ["./src/api/middlewares/*"],
      "~modules/*": ["./src/api/modules/*"],
      "~shared/*": ["./src/api/shared/*"],
      "~config/*": ["./src/config/*"],
      "~database/*": ["./src/database/*"],
      "~seeds/*": ["./src/seeds/*"]
    }
  },
  "exclude": ["node_modules", "build", "coverage"]
}
